<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane fx:id="borderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
            stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fa.gui.controllers.PurchaseController">
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Text fx:id="notification" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
                            <HBox.margin>
                                <Insets left="50.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="Peterburg" size="12.0"/>
                            </font>
                        </Text>
                    </children>
                </HBox>
            </items>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="purchasesTable" BorderPane.alignment="CENTER">
            <columns>

                <TableColumn fx:id="idColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="50.0"
                             text="№"/>
                <TableColumn fx:id="bondTicketColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0"
                             prefWidth="150.0" text="Тикет"/>
                <TableColumn fx:id="creationDateTimeColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0"
                             prefWidth="150.0" text="Дата"/>
                <TableColumn fx:id="quantityColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="150.0"
                             text="Количество"/>
                <TableColumn fx:id="priceColumn" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="150.0"
                             text="Цена покупки"/>

            </columns>
        </TableView>
    </center>
    <left>
    </left>
</BorderPane>
